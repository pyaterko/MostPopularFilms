<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"></Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/ivAlbum"
            android:layout_width="357dp"
            android:layout_height="238dp"
            android:layout_marginTop="24dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.621"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2"
            motion:layout_editor_absoluteX="-9dp"
            motion:layout_editor_absoluteY="187dp" />
        <Constraint
            android:id="@+id/ivBack"
            android:layout_width="@dimen/ic_size_16dp"
            android:layout_height="@dimen/ic_size_16dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/rating_progress"
            motion:layout_editor_absoluteX="344dp"
            motion:layout_editor_absoluteY="394dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end"></ConstraintSet>
</MotionScene>